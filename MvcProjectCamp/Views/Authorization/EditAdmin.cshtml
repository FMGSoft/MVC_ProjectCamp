@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })

        @Html.Label("Admin Kullanıcı Adı :")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminUserName)
        <br />
        @Html.Label("Şifreyi Giriniz :")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminPassword)
        <br />
        @Html.Label("Admin Rolü Seçiniz :")
        @Html.DropDownListFor(x => x.AdminID, (List<SelectListItem>)ViewBag.vly, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Aktiflik Seçiniz :")
        @Html.CheckBoxFor(x => x.AdminStatus)
        <br /> <br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}